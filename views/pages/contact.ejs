<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../components/head', {title: 'Contact'}); %>
  </head>
  <body>
    <%- include('../components/header',{page: 'Contact'}); %>

    <section class="page-header page-header-about">
      <div class="container">
        <div class="row">
          <div class="col">
            <h1>Contact Us</h1>
            <p>Get in touch at any time</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Reservation section -->
    <section id="reservation" class="section-pad-y">
      <div class="container">
        <div class="row">
          <div class="col-lg-3 text-center my-auto py-5" data-aos="fade-up" data-aos-duration="1000">
            <img class="reservation-icon" src="static/vectors/placeholder.svg" alt="contact icon" />
            <h3>Contacts</h3>
            <h5>+639 999 KODIGO</h5>
            <p>777 Angel Street<br />Heaven, 1200 Metro Manila</p>
            <ul class="nav justify-content-center">
              <li class="nav-item">
                <a class="nav-link" href="#">
                  <i class="fab fa-facebook-f color-cardinal"></i>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">
                  <i class="fab fa-instagram color-cardinal"></i>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">
                  <i class="fab fa-twitter color-cardinal"></i>
                </a>
              </li>
            </ul>
          </div>
          <div class="reservation__form-box col-lg-6">
            <ul class="nav nav-pills" id="pills-tab" role="tablist">
              <li class="nav-item" role="presentation">
                <button
                  class="nav-link active"
                  id="pills-booking-tab"
                  data-bs-toggle="pill"
                  data-bs-target="#pills-booking"
                  type="button"
                  role="tab"
                  aria-controls="pills-home"
                  aria-selected="true"
                >
                  <span>Booking</span>
                </button>
              </li>
              <li class="nav-item" role="presentation">
                <button
                  class="nav-link"
                  id="pills-contact-tab"
                  data-bs-toggle="pill"
                  data-bs-target="#pills-contact"
                  type="button"
                  role="tab"
                  aria-controls="pills-profile"
                  aria-selected="false"
                >
                  <span>Email</span>
                </button>
              </li>
            </ul>

            <div class="tab-content" id="pills-tabContent">
              <div class="tab-pane fade show active" id="pills-booking" role="tabpanel">
                <h2 class="mt-5">Make a Reservation</h2>
                <p class="reservation-subtitle">For further questions, please call</p>
                <div class="row">
                  <div class="col-lg-10 mx-auto">
                    <form>
                      <div class="row mb-3">
                        <div class="col">
                          <label for="form-date">Date</label>
                          <input
                            class="form-control text-center"
                            type="text"
                            name="date"
                            value=""
                            id="form-date"
                            placeholder="Select Date"
                            autocomplete="off"
                            data-toggle="datepicker"
                          />
                        </div>
                        <div class="col">
                          <label for="form-time">Time</label>
                          <select name="time" class="form-control text-center" id="form-time" required>
                            <option value="" disabled selected hidden>Select Time</option>
                            <option value="1:00 pm">1:00 pm</option>
                            <option value="2:00 pm">2:00 pm</option>
                            <option value="3:00 pm">3:00 pm</option>
                            <option value="4:00 pm">4:00 pm</option>
                            <option value="5:00 pm">5:00 pm</option>
                            <option value="6:00 pm">6:00 pm</option>
                            <option value="7:00 pm">7:00 pm</option>
                            <option value="8:00 pm">8:00 pm</option>
                            <option value="9:00 pm">9:00 pm</option>
                            <option value="10:00 pm">10:00 pm</option>
                            <option value="11:00 pm">11:00 pm</option>
                          </select>
                        </div>
                        <div class="col">
                          <label for="form-size">Party Size</label>
                          <input class="form-control text-center" type="text" name="party" placeholder="1" id="form-size" autocomplete="off" />
                        </div>
                      </div>
                      <div class="row">
                        <div class="col">
                          <form>
                            <div class="form-group mb-3">
                              <input type="text" class="form-control" name="name" placeholder="Name *" required />
                            </div>
                            <div class="form-group mb-3">
                              <input type="email" class="form-control" name="email" placeholder="Email *" required />
                            </div>
                            <div class="form-group mb-3">
                              <input type="tel" class="form-control" name="phone" placeholder="Phone" />
                            </div>
                            <div class="form-group mb-3">
                              <textarea class="form-control" name="message" rows="5" placeholder="Message *" required></textarea>
                            </div>
                            <button class="btn btn-outline-cardinal mt-3" type="submit" name="button">Reserve</button>
                          </form>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
              <div class="tab-pane fade" id="pills-contact" role="tabpanel">
                <h2 class="mt-5">Keep in Touch</h2>
                <p class="reservation-subtitle">We are happy to hear from you</p>
                <div class="row">
                  <div class="col-lg-10 mx-auto">
                    <form>
                      <div class="form-group mb-3">
                        <input type="text" class="form-control" name="name" placeholder="Name *" required />
                      </div>
                      <div class="form-group mb-3">
                        <input type="email" class="form-control" name="email" placeholder="Email *" required />
                      </div>
                      <div class="form-group mb-3">
                        <input type="tel" class="form-control" name="phone" placeholder="Phone" />
                      </div>
                      <div class="form-group mb-3">
                        <textarea class="form-control" name="message" rows="5" placeholder="Message *" required></textarea>
                      </div>
                      <button class="btn btn-outline-cardinal mt-3" type="submit" name="button">Send</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-3 text-center my-auto py-5" data-aos="fade-up" data-aos-duration="1000">
            <img class="reservation-icon" src="static/vectors/serving-dish.svg" alt="time icon" />
            <h3>Time</h3>
            <h5>Weekdays</h5>
            <p>1:00 pm – 11:00 pm</p>
            <h5>Weekends</h5>
            <p>1:00 pm – 12:00 am</p>
          </div>
        </div>
      </div>
    </section>

    <!-- cta -->
    <%- include('../components/map'); %>

    <!-- footer -->
    <%- include('../components/footer'); %>

    <!-- scripts -->
    <%- include('../components/scripts'); %>
  </body>
</html>
